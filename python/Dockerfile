FROM python:3.10.4-slim-buster

ARG MOSQUITTO_IP
ARG MOSQUITTO_USERNAME
ARG MOSQUITTO_PASSWORD
ARG MYSQL_DATABASE
ARG MYSQL_USER
ARG MYSQL_ROOT_PASSWORD
ARG MYSQL_ALLOW_EMPTY_PASSWORD

WORKDIR /app

RUN apt-get update && apt-get install -y \
    python3-dev \
    default-libmysqlclient-dev \
    build-essential

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

ENV MOSQUITTO_IP=${MOSQUITTO_IP}
ENV MOSQUITTO_USERNAME=${MOSQUITTO_USERNAME}
ENV MOSQUITTO_PASSWORD=${MOSQUITTO_PASSWORD}
ENV MYSQL_DATABASE=${MYSQL_DATABASE}
ENV MYSQL_USER=${MYSQL_USER}
ENV MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
ENV MYSQL_ALLOW_EMPTY_PASSWORD=${MYSQL_ALLOW_EMPTY_PASSWORD}

CMD [ "python", "./python_mqtt_mysql_service.py" ]